{
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "rewriteRelativeImportExtensions": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "declarationDir": "./dist/types",
    "resolveJsonModule": true
  },
  "include": ["src/**/*.mts"]
}
